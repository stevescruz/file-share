{
  "name": "fileshare",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "copy-assets": "copyfiles -u 1 src/views/**/*.ejs dist/",
    "preserve": "npm run clean && npm run build && npm run copy-assets",
    "serve": "concurrently --kill-others \"tsc -w\" \"npm run watch:ts-ejs\"",
    "prestart": "npm run clean && npm run build && npm run copy-assets",
    "start": "node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:ts-ejs": "nodemon -w src -e ts,ejs --delay 1.5 --exec \"npm run copy-assets && npm run delay && node dist/server.js\"",
    "delay": "node -e \"setTimeout(()=>{}, 2500)\""
  },
  "type": "module",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.1",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.0.8",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.18",
    "@types/sqlite3": "^3.1.8",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  }
}
